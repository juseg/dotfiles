# ~/.config/mutt/home.rc - Neomutt configuration for home account

# account settings
set from = "Julien Seguinot <`secret-tool lookup account home value from`>"
set realname = "Julien Seguinot"
set mbox_type = Maildir
set folder = "~/.local/share/mail/home"
set sendmail = "msmtp -a home"

# cache settings
set header_cache = "~/.cache/mutt/home/headers"
set message_cachedir = "~/.cache/mutt/home/bodies"

# mailbox settings
set spoolfile = "+Inbox"
set postponed = "+Drafts"
set record = "+Sent"
set trash = "+Trash"
named-mailboxes \
  "Home Inbox" =Inbox \
  "- Archive" =Archive \
  "- Drafts" =Drafts \
  "- Junk" =Junk \
  "- Sent" =Sent \
  "- Trash" =Trash
