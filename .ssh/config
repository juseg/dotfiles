    ForwardX11 no

# Sigma2
Host s saga
    User juseg
    Hostname saga.sigma2.no

# Defaults at the end (man ssh_config)
Host *
    AddKeysToAgent  yes  # store keys in agent on first use
    ForwardAgent yes     # always forward agent
